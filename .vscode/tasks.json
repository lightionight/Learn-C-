{
    "version" :"2.0.0",
    "tasks":[{
            "type" :"shell",
            "label": "C",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "command": "gcc",
            "args":["-std=gnu11","${file}", "-o", "${workspaceFolder}\\Debug\\${fileBasenameNoExtension}.exe"],
            "options": {"cwd": "${workspaceFolder}"},
            "problemMatcher":["$gcc"],
            "group": {"kind": "build","isDefault": true}
    }]
}