{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "C# build",
            "program": "${workspaceFolder}/Debug/<target-framework>/<project-name.dll>",
            "args": [],
            "cwd": "${workspaceFolder}/",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "logging": {"moduleLoad": false, "engineLogging": false},
            "name": "C",
            "type": "cppdbg",
            "request": "launch",
            "program":"${workspaceFolder}\\Debug\\${fileBasenameNoExtension}.exe",
            "args":[],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",           
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Program Files/mingw-w64/x86_64-8.1.0-posix-seh-rt_v6-rev0/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": false,
                }
            ],
            "preLaunchTask":"C Build"
        },
        {
            "logging": {"moduleLoad": false, "engineLogging": false},
            "name": "C++",
            "type": "cppdbg",
            "request": "launch",
            "program":"${workspaceFolder}\\Debug\\${fileBasenameNoExtension}.exe",
            "args":[],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",           
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Program Files/mingw-w64/x86_64-8.1.0-posix-seh-rt_v6-rev0/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": false,
                }
            ],
            "preLaunchTask":"C++ Build"
        },
        {
            "name": ".NET Core Launch (console)2",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/CSharp/EssentialCSharp/Chapter01/bin/Debug/netcoreapp3.1/Chapter01.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CSharp/EssentialCSharp/Chapter01",
